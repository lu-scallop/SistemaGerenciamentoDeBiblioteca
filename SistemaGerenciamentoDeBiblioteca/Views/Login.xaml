<Window x:Class="SistemaGerenciamentoDeBiblioteca.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaGerenciamentoDeBiblioteca.Views"
        mc:Ignorable="d"
        Title="Login" Height="400" Width="300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Image 
            Source="Assets/bookworm.png" 
            Stretch="Fill"
            HorizontalAlignment="Left" 
            VerticalAlignment="Top"
            Width="250"
            Height="129" Margin="16,24,0,0"/>

        <Label Content="Usuário" Grid.Row="1" Margin="100,10,100,157"/>
        <Label Content="Senha" Grid.Row="1" Margin="100,81,100,86"/>
        <TextBox Grid.Row="1" Width="100" Background="LightYellow" Margin="100,40,100,135"/>
        <TextBox Grid.Row="1" Width="100" Background="LightYellow" Margin="100,111,100,64"/>



    </Grid>
</Window>
