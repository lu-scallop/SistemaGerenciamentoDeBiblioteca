<Window x:Class="SistemaGerenciamentoDeBiblioteca.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaGerenciamentoDeBiblioteca.Views"
        mc:Ignorable="d"
        Title="Login" Height="400" Width="300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <Image 
            Grid.Row="0"
            Source="/Assets/bookworm.png" 
            Stretch="Uniform"
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"
            MaxWidth="150"
            MaxHeight="100" 
            Margin="10"/>

        <StackPanel Grid.Row="1" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Width="200">
            <Label Content="Usuário" 
                   FontSize="14" 
                   FontWeight="SemiBold"
                   HorizontalAlignment="Left"/>

            <TextBox Width="180" 
                     Height="25"
                     Background="LightYellow" 
                     Margin="0,5,0,15"/>

            <Label Content="Senha"  
                   FontSize="14" 
                   FontWeight="SemiBold"
                   HorizontalAlignment="Left"/>
            <PasswordBox Width="180" 
                        Height="25"
                        Background="LightYellow" 
                        Margin="0,5,0,20"/>

            <Button Content="Entrar" 
                    Width="100" 
                    Height="30"
                    Background="#4CAF50"
                    Foreground="White"
                    FontWeight="SemiBold"
                    Cursor="Hand" Click="Button_Click"/>
            <Label 
                FontSize="14"
                HorizontalAlignment="Center"
                FontWeight="Bold"
                Foreground="Blue"
                FontStyle="Italic"
                Cursor="Hand" MouseLeftButtonDown="AdminLabel_Click"
                >
                <Label.Content>
                    <TextBlock Text="ADMIN" TextDecorations="Underline"/>
                </Label.Content>
            </Label>
        </StackPanel>
        



    </Grid>
</Window>
